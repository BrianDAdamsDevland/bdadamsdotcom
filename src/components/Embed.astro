---
interface Props {
  url: string;
  useCardStyle: boolean;
  autoplay: boolean;
  small: boolean;
}

const { url, useCardStyle, autoplay, small } = Astro.props;

const embedUrl = encodeURI(url);

const apiKey = import.meta.env.IFRAMELY_API_KEY;

let apiUrl = `https://iframe.ly/api/iframely?url=${embedUrl}&api_key=${apiKey}&ssl=1`;

if (useCardStyle) {
  apiUrl += "&card=1&media=0";
}

if (autoplay) {
  apiUrl += "&autoplay=1";
}

let html = "";
try {
  const response = await fetch(apiUrl);
  if (!response.ok) {
    console.error(`Embed fetch failed for ${url}: ${response.status}`);
  } else {
    const data = await response.json();
    html = data.html ?? "";
  }
} catch (e) {
  console.error(`Embed fetch error for ${url}:`, e);
}
---

{html && (
  <div class:list={["embed", { small: small }]}>
    <Fragment set:html={html} />
  </div>
)}

<style lang="scss">
  .embed.small :global(iframe) {
    margin-left: auto;
    margin-right: auto;
    max-width: 350px !important;
    display: block;
  }

  @media (min-width: 600px) {
    .small {
      width: 350px;
      float: left;
      margin-right: 15px;
    }
  }
</style>
