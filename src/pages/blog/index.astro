---
import Layout from "../../layouts/Layout.astro";

import Typer from "../../components/Typer.vue";

import { getCollection } from "astro:content";
import Enumerable from "linq";

const allBlogCollection = await getCollection("blog");

const blogItems = Enumerable.from(allBlogCollection)
  .select((i) => ({ ...i.data, slug: i.slug }))
  .orderByDescending((a) => a.date)
  .toArray();
---

<Layout title="blog ||| bdadams.com" sourceLink="/src/pages/blog/index.astro">
  <main>
    <div class="card">
      <a
        href="/rss.xml"
        title="RSS Feed"
        class="float-right"
        aria-label="RSS Feed"
      >
        <i class="fa-sharp fa-solid fa-square-rss fa-2x"></i>
      </a>

      <h1>
        <Typer client:load text="Blog" duration={600} />
      </h1>

      <div class="entries">
        {
          blogItems.map((i) => (
            <div class="entry">
              <div>
                <strong class="date" transition:name={`${i.slug}-date`}>
                  {i.date.toLocaleDateString("en-us", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </strong>
                <a href={`/blog/${i.slug}/`}>
                  <h3>
                    <span transition:name={`${i.slug}-title`}>{i.title}</span>
                    <small transition:name={`${i.slug}-subtitle`}>
                      {i.subtitle}
                    </small>
                  </h3>
                </a>
              </div>

              <div transition:name={`${i.slug}-hero`}>
                <a href={`/blog/${i.slug}/`}>
                  <div style={`background-image: url('${i.heroImage}')`}></div>
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  h3 {
    margin-top: 0;
    font-weight: 800;

    small {
      font-weight: 400;
    }
  }

  a {
    text-decoration: none;
  }

  .entries {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .entry {
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
    gap: 10px;
    line-height: 1.3;

    .date {
      text-transform: uppercase;
      font-size: 0.8em;
      color: var(--color-text-muted);
      letter-spacing: 0.2px;
    }

    div:first-child {
      flex-grow: 1;
    }

    div:last-child {
      width: 80px;
      height: 80px;
      line-height: 0;
      background-size: cover;
      background-position: 50% 50%;

      @media (min-width: 400px) {
        width: 130px;
        height: 90px;
      }
    }

    img {
      max-width: 100px;
    }

    h3 {
      margin: 0;
    }
  }
</style>
